<extension type="plugin" version="3.0" group="system" method="upgrade">
	<name>plg_system_whatsappags</name>
	<author></author>
	<creationDate>November 2023</creationDate>
	<copyright>Copyright (c) 2023 . All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>alvin_gi@hotmail.com</authorEmail>
	<authorUrl>https://github.com/alvinalvin</authorUrl>
	<version>1.0.0</version>
  <files>
		<filename plugin="whatsappags">whatsappags.php</filename>
		<filename>index.html</filename>
		<filename>whatsappags.xml</filename>
		<folder>assets</folder>
	</files>

	<languages>
		<language tag="en-GB">en-GB.plg_system_whatsappags.ini</language>
		<language tag="en-GB">en-GB.plg_system_whatsappags.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="numberphone" type="text" default="67055843" label="Phone Number"/>
				<field name="msj" type="text" default="Welcome To jQueryScript.Net" label="Popup Message"/>
				<field name="headerTitle" type="text" default="jQuery Floating WhatsApp" label="Header Title"/>
				<field name="popup" type="radio" default="0" label="Show Popup" description="">
			  <option value="0">true</option>
			  <option value="1">false</option>
			  </field>
				<field name="position" type="radio" default="0" label="Position" description="">
			  <option value="0">Right</option>
			  <option value="1">Left</option>
			  </field>
				<field name="background" default="#E5DDD5" type="color" label="background color"/>
				<field name="headerColor" default="#128C7E" type="color" label="header Color"/>

			</fieldset>
		</fields>
	</config>
</extension>
